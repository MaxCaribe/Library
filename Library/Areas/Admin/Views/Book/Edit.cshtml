                <a class='form-control' style="width:280px" href='javascript:;'>
                    <input type="file" name="Image" size="40" class="form-control"
                           style="position:absolute;z-index:2;top:0;
 left:15px;filter: alpha(opacity=0); opacity:0;
background-color:transparent;color:transparent; cursor: default"
                           onchange='$("#upload-file-info").html($(this).val());'>
                </a>
